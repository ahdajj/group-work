<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include("./shared/head") %>

</head>
<body>
    
    <h2>Welcome To Refu'In</h2>
    
    <div class="write-post">
        <a href="/post/addnew"><h3>If you are <strong>IN</strong> start the journey In-Posting ✍️<div class="In-Posting"><STRong></STRong></div> <input type="text" class="post-input" placeholder="write your post in here"> 📝</h3></a>

    </div>
    
    <div class="jasem-style">
        <!-- <div class="post-comment"> -->

            <% if (posts.length>0){ %>
                <% posts.forEach(post=>{ %>
                    <div>
                        <div class="post-comment">
                            <h2><%=post.UserId.Name %> Post <a href="/post/<%= post._id %>">📝</a></h2>
                            <h4>📰 -<%= post.body %></h4>
                            <hr>
                            <h6>⌚️ <%= post.create_at%> </h6>
                            <!-- See More</a> -->
                
                        </div>
                   
                        <div class="comment-comment">
                            <h2>Company Comment 🗣</h2>
            
                            <% if (post.comment.length>0){ %>
                                <% post.comment.forEach(comments=>{ %>
                                <h5>👔 <%= comments.body %></h5>
                        </div>    
                    </div>
    
                <% }) %>
                <%}  %>      
                <% }) %>
               
            <!-- </div> -->
            <%} else {%> 
                <h5>No Post On for Day</h5>
        
            <% } %>
    </div>

</body>

<%- include("./shared/footer") %>

</html>